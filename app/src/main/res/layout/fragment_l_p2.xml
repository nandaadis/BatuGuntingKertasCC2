<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FragmentLP2">

    <ImageView
        android:id="@+id/lp_img2"
        android:layout_width="@dimen/lp_imgsize"
        android:layout_height="@dimen/lp_imgsize"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="@dimen/lp_imgmargin"

        />

    <TextView
        android:id="@+id/lp_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bermain suit melawan komputer"
        android:textColor="@color/white"
        android:textSize="@dimen/text2"
        android:fontFamily="@font/roboto_medium"
        app:layout_constraintTop_toBottomOf="@id/lp_img2"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:src="@drawable/lp_slide2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>